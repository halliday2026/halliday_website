---
import { Image } from 'astro:assets';
import logo from '../assets/Logo.jpg';
import { navItems } from '../data/navigation';

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <Image
          src={logo}
          alt="Halliday"
          width={160}
          height={50}
          class="h-10 w-auto"
        />
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-8" aria-label="Main navigation">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'text-sm font-medium transition-colors hover:text-gold',
              currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                ? 'text-gold'
                : 'text-charcoal',
            ]}
          >
            {item.label}
          </a>
        ))}
        <a
          href="/contact"
          class="bg-gold hover:bg-gold-light text-white px-5 py-2.5 rounded-lg text-sm font-semibold transition-colors"
        >
          Get Started
        </a>
      </nav>

      <!-- Mobile Hamburger -->
      <button
        id="menu-toggle"
        class="md:hidden p-2 text-charcoal"
        aria-label="Toggle menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-100">
    <nav class="px-4 py-4 space-y-3" aria-label="Mobile navigation">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'block text-base font-medium py-2 transition-colors',
            currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
              ? 'text-gold'
              : 'text-charcoal hover:text-gold',
          ]}
        >
          {item.label}
        </a>
      ))}
      <a
        href="/contact"
        class="block bg-gold hover:bg-gold-light text-white px-5 py-3 rounded-lg text-center font-semibold transition-colors mt-2"
      >
        Get Started
      </a>
    </nav>
  </div>
</header>

<script>
  const toggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('menu-icon-open');
  const iconClose = document.getElementById('menu-icon-close');

  toggle?.addEventListener('click', () => {
    const isOpen = menu?.classList.toggle('hidden') === false;
    toggle.setAttribute('aria-expanded', String(isOpen));
    iconOpen?.classList.toggle('hidden', isOpen);
    iconClose?.classList.toggle('hidden', !isOpen);
  });
</script>
