---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'center' | 'left';
  light?: boolean;
}

const { title, subtitle, align = 'center', light = false } = Astro.props;
---

<div class:list={['mb-12', align === 'center' ? 'text-center' : 'text-left']}>
  <h2
    class:list={[
      'text-3xl md:text-4xl font-heading font-bold mb-4',
      light ? 'text-white' : 'text-charcoal',
    ]}
  >
    {title}
  </h2>
  <div
    class:list={[
      'w-16 h-1 bg-gold rounded-full mb-6',
      align === 'center' ? 'mx-auto' : '',
    ]}
  />
  {subtitle && (
    <p
      class:list={[
        'text-lg max-w-2xl',
        align === 'center' ? 'mx-auto' : '',
        light ? 'text-gray-300' : 'text-gray-600',
      ]}
    >
      {subtitle}
    </p>
  )}
</div>
