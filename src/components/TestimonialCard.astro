---
interface Props {
  quote: string;
  name: string;
  title: string;
  business: string;
}

const { quote, name, title, business } = Astro.props;
---

<div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8">
  <svg class="w-8 h-8 text-gold mb-4" fill="currentColor" viewBox="0 0 24 24">
    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983z" />
  </svg>
  <p class="text-gray-600 leading-relaxed mb-6 italic">"{quote}"</p>
  <div>
    <p class="font-semibold text-charcoal">{name}</p>
    <p class="text-sm text-gray-500">{title}, {business}</p>
  </div>
</div>
