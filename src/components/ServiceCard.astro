---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border-t-4 border-t-gold">
  <div class="text-4xl mb-4">{icon}</div>
  <h3 class="text-xl font-heading font-bold text-charcoal mb-3">{title}</h3>
  <p class="text-gray-600 leading-relaxed">{description}</p>
</div>
