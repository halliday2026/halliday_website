---
interface Props {
  heading: string;
  body: string;
  buttonText?: string;
  buttonHref?: string;
}

const {
  heading,
  body,
  buttonText = 'Get Started Today',
  buttonHref = '/contact',
} = Astro.props;
---

<section class="bg-gradient-to-r from-navy to-charcoal py-20 px-4">
  <div class="max-w-3xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-heading font-bold text-white mb-6">
      {heading}
    </h2>
    <p class="text-lg text-gray-300 mb-8">
      {body}
    </p>
    <a
      href={buttonHref}
      class="inline-block bg-gold hover:bg-gold-light text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors"
    >
      {buttonText}
    </a>
  </div>
</section>
