---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import CTASection from '../components/CTASection.astro';
import heroImage from '../assets/Hero.png';
import { services } from '../data/services';
import { testimonials } from '../data/testimonials';
---

<BaseLayout title="Halliday — AI Solutions for Small Business">
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden -mt-20">
    <div class="absolute inset-0">
      <Image
        src={heroImage}
        alt="Small business team collaborating with AI technology"
        class="w-full h-full object-cover"
        widths={[640, 1024, 1440, 1920]}
        sizes="100vw"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-charcoal/85 via-navy/70 to-navy/50"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 pt-32">
      <div class="max-w-2xl">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-bold text-white leading-tight mb-6">
          AI Doesn't Have to Be <span class="text-gold">Scary</span>
        </h1>
        <p class="text-xl text-gray-200 mb-8 leading-relaxed">
          We help small businesses like yours harness the power of AI — no tech background required.
          Save time, cut costs, and grow with confidence.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 flex-wrap">
          <a
            href="/ai-opportunity"
            class="inline-block bg-light-blue hover:bg-blue-400 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors text-center shadow-lg"
          >
            Free AI Opportunity Assessment
          </a>
          <a
            href="/contact"
            class="inline-block bg-gold hover:bg-gold-light text-white px-8 py-4 rounded-lg text-lg font-semibold transition-colors text-center"
          >
            Book a Free Consultation
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section id="about" class="scroll-mt-24 py-20 px-4 bg-bg-light">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <SectionHeading
            title="Your Partner in the AI Journey"
            subtitle=""
            align="left"
          />
          <p class="text-gray-600 text-lg leading-relaxed mb-6">
            At Halliday, we understand that AI can feel overwhelming. Terms like "machine learning" and
            "automation" sound complicated — but they don't have to be.
          </p>
          <p class="text-gray-600 text-lg leading-relaxed mb-8">
            We're a team of consultants who speak your language, not tech jargon. Our mission is simple:
            help small businesses like yours use AI to work smarter, serve customers better, and free up
            your time for what matters most.
          </p>
          <a
            href="/about"
            class="inline-flex items-center text-gold font-semibold hover:text-gold-light transition-colors"
          >
            Learn more about us
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        <div class="grid grid-cols-2 gap-6">
          <div class="bg-white rounded-xl p-6 shadow-sm text-center">
            <p class="text-4xl font-heading font-bold text-gold mb-2">85%</p>
            <p class="text-sm text-gray-600">of small businesses that adopt AI see ROI within 6 months</p>
          </div>
          <div class="bg-white rounded-xl p-6 shadow-sm text-center">
            <p class="text-4xl font-heading font-bold text-navy mb-2">10+</p>
            <p class="text-sm text-gray-600">hours saved per week on average with our solutions</p>
          </div>
          <div class="bg-white rounded-xl p-6 shadow-sm text-center">
            <p class="text-4xl font-heading font-bold text-navy mb-2">Zero</p>
            <p class="text-sm text-gray-600">technical background required to get started</p>
          </div>
          <div class="bg-white rounded-xl p-6 shadow-sm text-center">
            <p class="text-4xl font-heading font-bold text-gold mb-2">100%</p>
            <p class="text-sm text-gray-600">of clients say they wish they'd started sooner</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section id="services" class="scroll-mt-24 py-20 px-4">
    <div class="max-w-7xl mx-auto">
      <SectionHeading
        title="How We Help You Succeed"
        subtitle="From your first conversation to ongoing support, we guide you every step of the way."
      />
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <ServiceCard
            icon={service.icon}
            title={service.title}
            description={service.description}
          />
        ))}
      </div>
      <div class="text-center mt-12">
        <a
          href="/services"
          class="inline-block border-2 border-gold text-gold hover:bg-gold hover:text-white px-8 py-3 rounded-lg font-semibold transition-colors"
        >
          View All Services
        </a>
      </div>
    </div>
  </section>

  <!-- Why AI Matters -->
  <section class="py-20 px-4 bg-bg-warm">
    <div class="max-w-7xl mx-auto">
      <SectionHeading
        title="Why AI Matters for Your Business"
        subtitle="AI isn't just for big corporations. Here's why small businesses are embracing it."
      />
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl p-8 shadow-sm">
          <div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold text-charcoal mb-3">Save Hours Every Week</h3>
          <p class="text-gray-600 leading-relaxed">Automate repetitive tasks like scheduling, data entry, and customer follow-ups. Spend your time on what you do best.</p>
        </div>
        <div class="bg-white rounded-xl p-8 shadow-sm">
          <div class="w-12 h-12 bg-navy/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold text-charcoal mb-3">Reduce Costs</h3>
          <p class="text-gray-600 leading-relaxed">AI tools often cost less than a part-time employee but deliver round-the-clock results. Start small and scale as you grow.</p>
        </div>
        <div class="bg-white rounded-xl p-8 shadow-sm">
          <div class="w-12 h-12 bg-gold/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold text-charcoal mb-3">Stay Competitive</h3>
          <p class="text-gray-600 leading-relaxed">Your competitors are already exploring AI. Getting started now means you won't be left behind — you'll be leading the way.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How We Help (Process) -->
  <section class="py-20 px-4 bg-gradient-to-br from-navy to-bg-dark">
    <div class="max-w-7xl mx-auto">
      <SectionHeading
        title="Your Journey Starts Here"
        subtitle="Four simple steps from curious to confident."
        light={true}
      />
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {[
          { step: '01', title: 'Free Consultation', desc: 'Tell us about your business, your challenges, and your goals. We\'ll listen and explore whether AI is a good fit.' },
          { step: '02', title: 'Custom Assessment', desc: 'We analyze your workflows and identify the best opportunities for AI to make an immediate impact.' },
          { step: '03', title: 'Implementation', desc: 'We set everything up, configure the tools, and make sure they integrate seamlessly with your existing processes.' },
          { step: '04', title: 'Training & Support', desc: 'Your team gets hands-on training. And we stay by your side to ensure long-term success.' },
        ].map((item) => (
          <div class="text-center">
            <div class="w-16 h-16 mx-auto bg-gold/20 rounded-full flex items-center justify-center mb-6">
              <span class="text-2xl font-heading font-bold text-gold">{item.step}</span>
            </div>
            <h3 class="text-xl font-heading font-bold text-white mb-3">{item.title}</h3>
            <p class="text-gray-300 leading-relaxed">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 px-4 bg-bg-light">
    <div class="max-w-7xl mx-auto">
      <SectionHeading
        title="What Our Clients Say"
        subtitle="Small business owners who took the leap — and never looked back."
      />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((t) => (
          <TestimonialCard
            quote={t.quote}
            name={t.name}
            title={t.title}
            business={t.business}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <CTASection
    heading="Ready to Explore What AI Can Do for You?"
    body="No pressure, no jargon, no obligations. Just a friendly conversation about your business and how AI might help."
    buttonText="Book a Free Consultation"
    buttonHref="/contact"
  />
</BaseLayout>
